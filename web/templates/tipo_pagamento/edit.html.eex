<h5>Atualizar informações</h5>

<%= form_for @changeset, tipo_pagamento_path(@conn, :update, @tipo_pagamento), fn f -> %>
  <div class="form-group">
    <%= text_input f, :tipo, placeholder: "Tipo", class: "form-control" %>
    <%= error_tag f, :tipo %>
  </div>

  <%= submit "Salvar", class: "btn btn-primary" %>
<% end %>
